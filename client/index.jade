doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1')
    title Checkers
    link(rel='stylesheet', href='/vendor/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href=isProd ? '/index.min.css' : '/index.css')
    link(rel='shortcut icon', href='/favicon.ico')
  body
    #container
      #checkersboard
        table
          each row in [0, 2, 4, 6]
            tr
              each col in [0, 2, 4, 6]
                td.black.space(data-x=col, data-y=row)
                td.white.space(data-x=col + 1, data-y=row)
            tr
              each col in [0, 2, 4, 6]
                td.white.space(data-x=col, data-y=row + 1)
                td.black.space(data-x=col + 1, data-y=row + 1)
      #controls
        h1 Marmot Checkers
        #players
          p#p1.player Player 1
            #p1.count
          p#p2.player Player 2
            #p2.count
              p#winmessage Winner!
    script(src='/vendor/lodash/lodash.min.js')
    script(src='/vendor/jquery/dist/jquery.min.js')
    script(src=isProd ? '/index.min.js' : '/index.js')
